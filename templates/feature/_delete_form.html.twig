<form method="post" action="{{ path('app_feature_delete', {'id': feature.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feature.id) }}">
    <button class="border-2 border-red-500 duration-300 hover:bg-red-500 px-4 py-2 rounded gap-1 inline-flex items-center">
        <i class="fa-solid fa-trash"></i>
        <span class="sr-only">Delete</span></button>
</form>
