<ul class="mt-5 flex flex-col">
    {% for feature in features %}
    <li class="grid grid-cols-6 gap-4 relative border-t-gray border-t-2 pt-2 pb-2">
        <div class="flex items-center col-span-5 justify-start gap-2">
            {% if feature.isDone %}
                <span class="text-green-500">
                <i class="fa-solid fa-square-check"></i>
            </span>

            {% else %}
                <span class="text-red-500">
                 <i class="fa-solid fa-square-xmark"></i>
            </span>
            {% endif %}
            <a href="{{ path('app_feature_show', {id: feature.id}) }}" class="px-2">{{ feature.title }}</a>
        </div>
        <div class="flex items-center justify-end gap-2">
            {% include 'components/button/outline/_btn-outline-primary.html.twig' with {
                srOnly: "Modifier",
                path: path('app_feature_edit', {id: feature.id}),
                icon: "pen-to-square"
            } %}
            {% include 'feature/_delete_form.html.twig' %}
        </div>
    </li>
    {% endfor %}
</ul>