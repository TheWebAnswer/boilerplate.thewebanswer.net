<section class="pt-5 flex flex-col">
    {% if feature.isDone %}
        <span class="text-green-500 text-xl">
             <i class="fa-solid fa-square-check"></i>
            La fonctionnalité est mise en place.
        </span>
    {% else %}
        <span class="text-red-500 text-xl">
            <i class="fa-solid fa-square-xmark"></i>
            La fonctionnalité n'est pas mise en place.
        </span>
    {% endif %}
    <h3 class="text-4xl">{{ feature.title }}</h3>
    <p>{{ feature.description }}</p>
    <p class="text-sm font-semibold text-gray-500">Date de création : {{ feature.createdAt|format_datetime('full', 'none', locale='fr') }}</p>
    <p class="text-sm font-semibold text-gray-500">Date de modification : {{ feature.updatedAt|format_datetime('full', 'none', locale='fr') }}</p>
    <a class="italic text-sm text-primary font-semibold" href="{{ feature.link }}">Référence</a>
</section>