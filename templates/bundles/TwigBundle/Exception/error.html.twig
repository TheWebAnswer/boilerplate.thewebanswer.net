{% extends 'base.html.twig' %}

{% block title %}{{ status_code }}{% endblock %}

{% block body %}
<main class="flex min-h-full items-center justify-center py-36 px-4 sm:px-6 lg:px-8">
    <div class="text-center">
        <a href="{{ path('app_home') }}" class="">
            <img class="mx-auto h-16 w-auto" src="{{ asset('logos/logo-primary-dark.svg') }}" alt="TheWebAnswer">
        </a>
        <p class="text-base text-center text-5xl font-semibold text-indigo-600 mt-5">{{ status_code }}</p>
        <h1 class="mt-2 text-3xl font-medium text-slate-100 sm:text-5xl mb-5">{{ status_text|trans }}</h1>
        {% include 'components/button/simple/_btn-simple-primary.html.twig' with {
            content: "Page d'accueil",
            path: path('app_home')
        } %}
    </div>
</main>
{% endblock %}