{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<main class="flex justify-center items-center">
    <div class="w-full flex flex-col gap-5 max-w-2xl pt-28 pb-48">
        <h2 class="text-3xl">Connexion</h2>
        <form method="POST" class="w-full flex flex-col gap-5">
            <div class="flex flex-col gap-1 py-2 w-full">
                <label for="inputEmail" class="block text-sm font-medium text-primary">Email</label>
                <input id="inputEmail" name="email" type="email" value="{{ last_username }}" autocomplete="email" autofocus required class="text-sm text-dark rounded block w-full p-2.5 border border-2 border-primary duration-200 outline-none focus:border-primary {% if errors is defined %} text-red-900 bg-red-100 border-red-300 {% else %} text-slate-900 bg-white border-blue-300 {% endif %}" placeholder="Email">
            </div>
            <div class="flex flex-col gap-1 py-2 w-full">
                <label for="inputPassword" class="block text-sm font-medium text-primary">Mot de passe</label>
                <input id="inputPassword" name="password" type="password" autocomplete="current-password" required class="text-sm rounded text-dark block w-full p-2.5 border border-2 border-primary duration-200 outline-none focus:border-primary {% if errors is defined %} text-red-900 bg-red-100 border-red-300 {% else %} text-slate-900 bg-white border-blue-300 {% endif %}" placeholder="Mot de passe">
            </div>

            <div class="flex flex-row">
                <a class="text-sm text-primary font-semibold" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div>
                {% include 'components/button/simple/_btn-simple-submit.html.twig' with {
                    icon: 'rocket-launch',
                    content: "Se connecter"
                } %}
            </div>
        </form>
    </div>
</main>
{% endblock %}
