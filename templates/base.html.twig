<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="bg-light dark:bg-dark text-dark dark:text-light">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            {% include 'partials/header/_navbar.html.twig' %}
        </header>
        {% block body %}{% endblock %}
        <footer>
            {% include 'partials/footer/_footer.html.twig' %}
        </footer>
    </body>
</html>
