{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<main class="flex justify-center items-center">
    <div class="w-full flex flex-col gap-5 max-w-2xl pt-28 pb-48">
        <h2 class="text-3xl">Changer votre mot de passe</h2>
        <form method="POST" name="reset_password_request_form" class="w-full flex flex-col gap-5">
            {% include "components/form/input/_input-text.html.twig" with {
                field: resetForm.plainPassword.first,
                type: "password"
            } %}
            {% include "components/form/input/_input-text.html.twig" with {
                field: resetForm.plainPassword.second,
                type: "password"
            } %}

            {{ form_row(resetForm._token) }}

            {% include 'components/button/simple/_btn-simple-submit.html.twig' with {
                content: 'Changer votre mot de passe',
                icon: "paper-plane"
            } %}
        </form>
    </div>
</main>
{% endblock %}
